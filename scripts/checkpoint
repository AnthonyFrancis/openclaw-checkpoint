echo "Examples:"
echo "   checkpoint-backup            - Save your workspace now"
echo "   checkpoint-restore            - Pick from recent checkpoints to restore"
echo "   checkpoint-restore --latest   - Restore latest checkpoint (non-interactive)"
echo "   checkpoint-schedule hourly   - Enable hourly auto-backups"

#!/bin/bash
# checkpoint - Show all available checkpoint commands

echo ""
echo "ðŸ“¦ OpenClaw Checkpoint"
echo "=============================="
echo ""
echo "Commands:"
echo "   checkpoint-backup            - Backup workspace and agents"
echo "   checkpoint-restore           - Restore from remote (select checkpoint)"
echo "   checkpoint-restore --latest  - Restore most recent checkpoint (skip selection)"
echo "   checkpoint-status            - Check backup health"
echo "   checkpoint-setup             - Interactive first-time setup"
echo "   checkpoint-auth              - Fix authentication issues"
echo "   checkpoint-schedule hourly   - Set auto-backup (or 15min, 30min, daily, etc.)"
echo "   checkpoint-schedule disable  - Turn off automatic backups"
echo "   checkpoint-stop              - Stop automatic backups"
echo "   checkpoint-reset             - Reset for fresh setup"
echo ""
echo "Agent Flags (for backup/restore):"
echo "   --workspace-only             - Skip agent backup/restore"
echo "   --agents-only                - Skip workspace, only backup/restore agents"
echo "   --agent <name>               - Operate on a single agent only"
echo ""
echo "Examples:"
echo "   checkpoint-backup                     - Backup workspace + all agents"
echo "   checkpoint-backup --agents-only       - Backup only agents"
echo "   checkpoint-backup --agent alex        - Backup only the 'alex' agent"
echo "   checkpoint-backup --workspace-only    - Backup workspace only (no agents)"
echo "   checkpoint-restore                    - Restore workspace + agents"
echo "   checkpoint-restore --latest           - Restore latest (non-interactive)"
echo "   checkpoint-restore --agents-only      - Restore only agents from backup"
echo "   checkpoint-schedule hourly            - Enable hourly auto-backups"
echo ""
